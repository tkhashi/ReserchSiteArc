<Window x:Class="AppCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
            <TextBox Text="TextBox" Width="300" Height="30"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20">
            <TextBlock Text="TextBlock" Width="1000" Height="1000"/>
        </StackPanel>
    </StackPanel>
</Window>
